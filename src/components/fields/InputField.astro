---
import { formatDate } from '../../../utils';

interface Props {
    name: string | null;
    id?: string | null;
    type: string | null;
    value?: string | null;
    placeholder?: string | null;
}

const { name, id, value, placeholder }:any = Astro.props;
const type:any= Astro.props.type;
---

{ name === 'createdAt' || name === 'updatedAt' ?
    <input 
    type={type || 'text'} 
    id={id} 
    name={name} 
    value={formatDate(value)}
    readonly
    />
    :
    <input 
    type={type || 'text'} 
    id={id} 
    name={name} 
    value={value}
    placeholder={placeholder?.es}
    />
}

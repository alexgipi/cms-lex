---
interface Props {
	title: string;
	body: string;
	href: string;
	counter: number;
}

const { href, title, body, counter } = Astro.props;
---

<li class="link-card">
	<a href={href}>
		<h2>
			{title}
			<span class="counter"> {counter} </span>
		</h2>
		<p>
			{body}
		</p>
	</a>
</li>
<style>
	.link-card {
		list-style: none;
		display: flex;
		padding: 1px;
		background-image: none;
		background-size: 400%;
		border-radius: 9px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22,1,0.36,1);
	}
	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: 26px 36px;
		color: white;
		background-color: #1b1b1bbd;
		opacity: 0.8;
		border-radius: 10px;
		box-shadow: inset 0 0 0 1px rgb(255 255 255 / 6%);
		display: flex;
		flex-direction: column;
	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		display: flex;
		justify-content: space-between;
		align-items: center;
	}
	.counter {
		font-size: 26px;
    	transform: scale(1.2);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
		line-height: 1.6;
		font-size: 0.9em;
		text-wrap: pretty;
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-light));
	}
</style>

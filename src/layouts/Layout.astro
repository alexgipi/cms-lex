---
interface Props {
  title?: string;
}

const { title } = Astro.props;

import { addCollections } from "../../lexgi.mjs";
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Assistant:wght@200;300;400;500;600;700;800&family=Noto+Sans:wght@100;200;300;400;600;700&family=Roboto:wght@100;300;400;500;700&display=swap"
      rel="stylesheet"
    />

    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
	
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
    <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.0/flowbite.min.js"></script>
    <script is:inline src="/reload/reload.js"></script>
  </body>
</html>
<style is:global>
	
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
    --nav-width: 260px;
    --nav-btn-size: 36px;
  }

  * {
    box-sizing: border-box;
  }

  html {
    font-family: system-ui, sans-serif;
    background: #000;
    background-size: 224px;
    color-scheme: dark;
  }
  body {
    margin: 0;
    min-height: 100vh;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }

  .container {
    width: 100%;
    max-width: 100%;
    margin: 0 auto;
    padding-left: 3rem;
    padding-right: 3rem;
  }

  .padding-0 {
	padding: 0;
  }

  .flex {
    display: flex;
  }

  .just-content-space-between {
    justify-content: space-between;
  }

  .capitalize {
    text-transform: capitalize;
  }
  .layout {
    grid-template-columns: 260px 1fr;
    display: grid;
    align-items: flex-start;
    width: calc(100% + var(--nav-width));
    transform: translate3d(calc(var(--nav-width) * -1), 0, 0);
    transition: width 0.3s ease,transform 0.3s ease;
  }

  .layout.aside-opened {
      width: 100%;
      transform: translate3d(0, 0, 0);
  }

  .layout-content {
    flex: auto;
    background: #000000;
  }

  .toggle-aside-button {
    width: var(--nav-btn-size);
    height: var(--nav-btn-size);
    display: flex;
    align-items: center;
    justify-content: center;
    border: none;
    border-radius: 5px;
    position: fixed;
    top: 27px;
    left: 22px;
    z-index: 1;
    cursor: pointer;
    color: #f0f0f0;
    background: #ffffff08;
    box-shadow: 0 0 0 1px #2f2f2fcc;
    backdrop-filter: blur(7px);
    padding: 8px;
  }

  main {
    margin: auto;
    color: white;
    font-size: 18px;
    line-height: 1.6;
    min-height: calc(100vh - 90px);
    display: flex;
    flex-direction: column;
  }

  .section-header {
    display: flex;
    align-items: center;
    gap: 22px;
    margin: 1rem 0;
    padding: 10px 0;

    & .btn {
		display: flex;
		align-items: center;
		padding: 4px 20px;
		border-radius: 5px;
		border: none;
		color: #dbdbdb;
		background: #2d2d2d;
		font-weight: 500;
		cursor: pointer;
		font-size: 0.9em;
		text-decoration: none;
		min-height: 36px;
		font-family: Roboto, system-ui, 'sans-serif';

	  &.btn--primary-color {
		background-color: rgb(160, 84, 255);
    	color: rgb(0, 0, 0);
	  }
    }

	& .container {
		align-items: center;
	}
  }

  .section-header-actions {
	display: flex;
	gap: 10px;
  }

  .tox-notifications-container {
    display: none;
  }

  .filepond--credits {
    display: none;
  }

  .filepond--root {
    margin-bottom: 0 !important;
  }

  .filepond--root .filepond--panel-root {
    border-radius: 0.5em;
    background-color: #131313;
  }

  .filepond--root .filepond--drop-label {
    color: #898989;
  }

    /* Preview files */
    .preview-files {
      padding: 8px;
      display: flex;
      flex-direction: column;
      gap: 8px;
  }

  .preview-file-img {
      border-radius: 8px;
  }
</style>